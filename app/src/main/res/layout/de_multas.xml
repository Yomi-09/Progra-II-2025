<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".MultasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título principal -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DE LAS MULTAS"
            android:textColor="#FFFFFF"
            android:background="#002D72"
            android:padding="12dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Sección: CATEGORÍA (MOVIDA ARRIBA DEL MONTO) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORÍA DE LA MULTA"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#002D72"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioLeve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leve"
                android:textColor="#002D72"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/radioGrave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grave"
                android:textColor="#002D72"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/radioMuyGrave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muy Grave"
                android:textColor="#002D72"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/radioOtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otra"
                android:textColor="#002D72"/>
        </RadioGroup>

        <!-- Sección: MONTO (MOVIDA DESPUÉS DE CATEGORÍA) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONTO ($)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#002D72"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#002D72"
            android:textColorHint="#6E6E6E"
            android:layout_marginBottom="24dp"/>

        <!-- Botón Siguiente -->
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente →"
            android:textColor="#FFFFFF"
            android:backgroundTint="#002D72"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>