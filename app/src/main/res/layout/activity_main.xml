<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblNum1"
        android:text="Num 1:"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtNum1"
        android:hint="ej. 5"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/lblNum2"
        android:text="Num 2:"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txtNum2"
        android:hint="ej. 4.8"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>

    <!-- Grupo de RadioButtons -->
    <RadioGroup
        android:id="@+id/radioGroupOperaciones"
        android:layout_width="364dp"
        android:layout_height="282dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbSuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suma" />

        <RadioButton
            android:id="@+id/rbResta"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Resta" />

        <RadioButton
            android:id="@+id/rbMultiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="Multiplicación" />

        <RadioButton
            android:id="@+id/rbDivision"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="División" />

        <RadioButton
            android:id="@+id/rbExponenciacion"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Exponenciación" />

        <RadioButton
            android:id="@+id/Raíz"
            android:layout_width="134dp"
            android:layout_height="30dp"
            android:text="Raíz" />

        <RadioButton
            android:id="@+id/Porcentaje"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:text="Porcentaje" />

        <RadioButton
            android:id="@+id/Factorial"
            android:layout_width="134dp"
            android:layout_height="32dp"
            android:text="Factorial" />

        <RadioButton
            android:id="@+id/Módulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Módulo" />


    </RadioGroup>

    <!-- Resultado debajo del último RadioButton -->
    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_below="@id/radioGroupOperaciones"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Resultado: ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Botón de calcular debajo del resultado -->
    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblRespuesta"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Calcular" />

</RelativeLayout>
