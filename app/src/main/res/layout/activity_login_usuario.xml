<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/logoUsuario"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_pnc"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a sistema de multas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#002D72"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- SECCIÓN DE CONSULTA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar por:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#002D72"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioLicencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licencia"
                android:textColor="#002D72" />

            <RadioButton
                android:id="@+id/radioPlaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa"
                android:textColor="#002D72"
                android:layout_marginStart="24dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/editTextConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese número de licencia o placa"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#002D72"
            android:textColorHint="#6E6E6E"
            android:layout_marginTop="8dp" />
        <!-- FIN SECCIÓN DE CONSULTA -->

        <Button
            android:id="@+id/btnLoginUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar"
            android:backgroundTint="#002D72"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu seguridad, nuestro compromiso"
            android:textColor="#6E6E6E"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp" />
        <ImageButton
            android:id="@+id/btnRegresar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#002D72"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="34dp"
            android:layout_marginEnd="34dp"/>
    </LinearLayout>
</ScrollView>

