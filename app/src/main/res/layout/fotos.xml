<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imgFotoAdaptador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lblNombreAdaptador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cardFoto"
        android:layout_alignTop="@id/cardFoto"
        android:layout_marginStart="16dp"
        android:text="Nombre Producto"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblPrecioAdaptador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNombreAdaptador"
        android:layout_alignStart="@id/lblNombreAdaptador"
        android:layout_marginTop="4dp"
        android:text="Precio"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/lblCostoAdaptador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lblPrecioAdaptador"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@id/lblPrecioAdaptador"
        android:text="Costo"
        android:textColor="@color/black"
        android:textSize="14sp"/>

</RelativeLayout>
