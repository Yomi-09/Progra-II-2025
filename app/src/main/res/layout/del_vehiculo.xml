<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título principal -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATOS DEL VEHÍCULO"
            android:textColor="#FFFFFF"
            android:background="#002D72"
            android:padding="12dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Sección: PLACA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMACIÓN DE PLACA"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#002D72"
            android:layout_marginBottom="8dp" />

        <!-- Fila de encabezados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TIPO DE PLACA"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#002D72"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NÚMERO DE PLACA"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#002D72"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CÓDIGO DE RUTA"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#002D72"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Fila de campos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ej: MB"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="#002D72"
                android:textColorHint="#6E6E6E"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ej: 7135"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="#002D72"
                android:textColorHint="#6E6E6E"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Opcional"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="#002D72"
                android:textColorHint="#6E6E6E"/>
        </LinearLayout>

        <!-- CheckBox Placa Extranjera -->
        <CheckBox
            android:id="@+id/checkExtranjera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLACA EXTRANJERA"
            android:textStyle="bold"
            android:textColor="#002D72"
            android:layout_marginBottom="16dp"/>

        <!-- Sección: DATOS DEL VEHÍCULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATOS DEL VEHÍCULO"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#002D72"
            android:layout_marginBottom="8dp" />

        <!-- Clase de Vehículo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASE DE VEHÍCULO"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#002D72"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/txtClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Automóvil, Camioneta"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#002D72"
            android:textColorHint="#6E6E6E"
            android:layout_marginBottom="16dp"/>

        <!-- Marca -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MARCA"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#002D72"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/txtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Toyota, Ford"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#002D72"
            android:textColorHint="#6E6E6E"
            android:layout_marginBottom="16dp"/>

        <!-- Modelo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODELO"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#002D72"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/txtModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Corolla 2023"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#002D72"
            android:textColorHint="#6E6E6E"
            android:layout_marginBottom="16dp"/>

        <!-- Color -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLOR"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#002D72"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Rojo, Azul"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#002D72"
            android:textColorHint="#6E6E6E"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente →"
            android:textColor="#FFFFFF"
            android:backgroundTint="#002D72"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>